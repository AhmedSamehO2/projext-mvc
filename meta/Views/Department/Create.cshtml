@model meta.BLL.Model.DepartmentVM
@{
    ViewData["Title"] = "Create";
   
}

<form asp-controller="Department" asp-action="Create">
    <label>DepartmentName</label>
    <input class="form-control" asp-for="DepartmentName" />
    <span asp-validation-for="DepartmentName" class="text-danger"></span>
    <br />
    <label>DepartmentCode</label>
    <input class="form-control" asp-for="DepartmentCode" />
    <span asp-validation-for="DepartmentCode" class="text-danger"></span>


    <center>
        <input class="btn btn-primary" type="submit" value="save" />
        <input class="btn btn-primary" type="reset" value="cancle" />

    </center>
</form>

@section MicroSoftValidation{

    <script src="~/assets/js/plugin/jquery.validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}