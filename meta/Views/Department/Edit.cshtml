@model meta.BLL.Model.DepartmentVM

@{
    ViewData["Title"] = "Edit";
    
}


<form asp-controller="Department" asp-action="Edit">
    <label> Department Name </label>
    <input type="text" asp-for="DepartmentName" class="form-control" />
    <span asp-validation-for="DepartmentName" class="text-danger"></span>
    <br />
     <label> Department Id </label>
    <input type="text" asp-for="DepartmentCode" class="form-control" />
    <span asp-validation-for="DepartmentCode" class="text-danger"></span>

    <center>
        <input type="submit" value="save" class="btn btn-primary" />
     @* <input type="reset" value="cancle" class="btn btn-primary" />*@

    </center>
</form>

@section MicroSoftValidation{

    <script src="~/assets/js/plugin/jquery.validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

